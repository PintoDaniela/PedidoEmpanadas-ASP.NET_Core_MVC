@model Shared.DTOs.DetallePedidoDto

<h2>Hacer Pedido</h2>

@{
    var opcionesGustos = new List<string>
    {
        "CP - Carne Picante (cortada a cuchillo)",
        "CS - Carne Suave (cortada a cuchillo)",
        "CD - Carne Dulce",
        "CM - Carne Molida Suave",
        "PP - Pollo Picante",
        "PS - Pollo Suave",
        "JQ - Jamón y Queso",
        "Cebolla y Mozzarella",
        "Cantimpalo y Mozzarella",
        "RQ - Roquefort",
        "RJ - Roquefort y Jamón",
        "TA - Mozzarella, Tomate y Albahaca",
        "VE - Verdura y Salsa Blanca",
        "HU - Humita",
        "HM - Humita y Mozzarella",
        "AT - Atún",
        "RG - Rata Gourmet"
    };
}

@using (Html.BeginForm("HacerPedido", "Pedido", FormMethod.Post))
{    
    <div>
        <h3>Gustos de Empanada</h3>

        @for (int i = 0; i < opcionesGustos.Count; i++)
        {
            <div>
                <label>
                    <input type="checkbox" name="PedidoItems[@i].Empanada" value="@opcionesGustos[i]" />
                    @opcionesGustos[i]
                </label>
                <label>
                    Cantidad:
                    <input type="number" name="PedidoItems[@i].Cantidad" min="0" />
                </label>
            </div>
        }
    </div>

    <input type="submit" value="Realizar Pedido" />
}
